---
const { wildFront } = Astro.props;
const info = wildFront[0];
---

<ul class="card-1">
  <h3>Recent Writings In the Wild</h3>
  <li>
    <a href={info[0].link}>
      <span class="text-three mr-4">{info[0].date.slice(0, 10)}</span><span
        class="font-ptmono">{info[0].title}</span
      ><span class="ml-2 text-one">{`${info[0].source}`}</span></a
    >
  </li>
  <li>
    <a href={info[1].link}>
      <span class="text-three mr-4">{info[1].date.slice(0, 10)}</span><span
        class="font-ptmono">{info[1].title}</span
      >
      <span class="ml-2 text-one">{`${info[1].source}`}</span></a
    >
  </li>
  <!-- <li>
    <a href={info[2].link}>
      <span class="text-three  mr-4">{info[2].date.slice(0, 10)}</span><span
        >{info[2].title}</span
      ><span class="ml-2">{`(${info[2].source})`}</span></a
    >
  </li> -->
</ul>

<style>
  .card-1 {
    @apply border-2 border-white;
    @apply col-span-3;
    @apply row-span-2 lg:row-span-6;
    @apply mb-0 lg:mb-12;
    @apply p-8;
    @apply text-xl;
    @apply w-full h-full;
  }
  li {
    @apply my-4;
    @apply text-base;
  }
</style>
